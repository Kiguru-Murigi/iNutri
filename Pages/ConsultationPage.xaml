<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iNutri.Pages.ConsultationPage">
    <StackLayout>
        <Label Text="Select a Date and Time:" />
        <DatePicker x:Name="consultationDate" />
        <TimePicker x:Name="consultationTime" />

        <Label Text="Select Consultation Type:" />
        <Picker x:Name="consultationType">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Phone</x:String>
                    <x:String>Video</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Book Consultation" Clicked="OnBookConsultationClicked" />
        
    </StackLayout>
</ContentPage>